<div id="column1">
  <% if @posts.present? %>

    <% @posts.each do |post| %>
      <h2><%= link_to post.title.titleize, post %></h2>

      <div id="post">
        <%= textilize post.excerpt %>

        <p><%= link_to "continue ...", post %></p>
      </div>
    <% end %>

  <% else %>
    <p>We'll start posting soon.</p>
  <% end %>

  <div class="bar">
  </div>
</div>

